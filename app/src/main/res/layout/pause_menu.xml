<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/pause_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="#95000000"
     >

        <RelativeLayout
            android:paddingLeft="@dimen/popup_margin"
            android:paddingRight="@dimen/popup_margin"
            android:paddingBottom="@dimen/popup_margin"
            android:paddingTop="@dimen/popup_margin"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:background="#1B35FF">

            <TextView android:id="@+id/Game_Is"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Game is"
                android:textSize="20pt"
                android:textColor="#FFFFFF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/Game_Is"
                android:text="Paused"
                android:textSize="20pt"
                android:textColor="#FFFFFF" />

            <Button android:id="@+id/return_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Return to Game"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>
</RelativeLayout>